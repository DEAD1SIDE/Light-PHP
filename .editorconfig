charset                  = utf-8
end_of_line              = lf
indent_style             = space
trim_trailing_whitespace = true
insert_final_newline     = true
max_line_length          = 80

[COMMIT_EDITMSG]
charset                  = utf-8
end_of_line              = lf
indent_size              = 4
