{
    "name": "bakeiro/light-php",
    "type": "project",
    "license": "MIT",
    "description": "Most easy profesional PHP framework",
    "config": {
        "vendor-dir": "./system/composer/vendor/"
    },
    "scripts": {
        "post-create-project-cmd": [
            "php -r \"require_once('./post-install.php'); \"",
            "php -r \"unlink('./post-install.php'); \"",
            "@solve-lint"
        ],
        "lint": [
            "phpcs  --encoding=utf-8 -n -s --colors --standard=PSR1,PSR12 --ignore=public/*,system/composer/*,node_modules/* ./ "
        ],
        "fix-lint": [
            "phpcbf  --encoding=utf-8 -n --colors --standard=PSR1,PSR12  --ignore=public/*,system/composer/*,node_modules/* ./"
        ]
    },
    "authors": [
        {
            "name": "David Baqueiro Santerbas",
            "email": "davidbaqueiro@outlook.com",
            "homepage": "http://davidbaqueiro.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.0",
        "ext-openssl": "*"
    },
    "require-dev": {
        "sunra/dbug": "^0.2.1",
        "squizlabs/php_codesniffer": "3.*",
        "slevomat/coding-standard": "^6.4"
    }
}
